<% content_for :body_content_title do %>
  <%= @video.Title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @video.Title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @video.Description %>
    </p>
  </section>
  <section>
    <h1>Video</h1>
    <p>
      <%=raw @video.Video %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="videos">
      <% @videos.each do |video| %>
        <li>
          <%= link_to video.Title, video_url(video) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
